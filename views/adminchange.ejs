<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add New Product</title>
    <link rel="stylesheet" href="./css/adminchanges.css">
</head>
<body>
    <header>
        <h1>Add New Product</h1>
    </header>
    <form id="newProductForm" action="/adminchange" method="post" enctype="multipart/form-data">
        <label for="image1">Product Image 1:</label>
        <input type="file" id="image1" name="image1" accept="image/*" enctype="multipart/form-data"><br>

        <label for="image2">Product Image 2:</label>
        <input type="file" id="image2" name="image2" accept="image/*" enctype="multipart/form-data"><br>

        <label for="image3">Product Image 3:</label>
        <input type="file" id="image3" name="image3" accept="image/*"><br>

        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name"><br>

        <label for="type">Product Type:</label>
        <input type="text" id="type" name="type"><br>

        <label for="price">Product Price:</label>
        <input type="text" id="price" name="price"><br>

        <label for="description">Product Description:</label>
        <input type="text" id="description" name="description"><br>

        <label for="size">Product Size:</label>
        <select id="size" name="size">
            <option value="XS">XS</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
            <option value="2XL">2XL</option>
        </select><br>

        <label for="gender">Product Gender:</label>
        <select id="gender" name="gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select><br>

        <label for="quantity">Product Quantity:</label>
        <input type="text" id="quantity" name="quantity"><br>

        <input type="submit" value="Add Product">
    </form>
    <header>
        <h1>Products List</h1>
    </header>
    <table>
        <thead>
            <tr>
                <th>Image 1</th>
                <th>Image 2</th>
                <th>Image 3</th>
                <th>Name</th>
                <th>Type</th>
                <th>Price</th>
                <th>Description</th>
                <th>Size</th>
                <th>Gender</th>
                <th>Quantity</th>
                <th>Change</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><img src="<%= product.image1 %>" alt="Image 1" style="width: 100px; height: auto;"></td>
        <td><img src="<%= product.image2 %>" alt="Image 2" style="width: 100px; height: auto;"></td>
        <td><img src="<%= product.image3 %>" alt="Image 3" style="width: 100px; height: auto;"></td>
                    <td><%= product.name %></td>
                    <td><%= product.type %></td>
                    <td><%= product.price %></td>
                    <td><%= product.description %></td>
                    <td><%= product.size %></td>
                    <td><%= product.gender %></td>
                    <td><%= product.quantity %></td>
                    <td>
                        <a href="/edit/<%= product._id %>">Edit</a>
                        <a href="/delete/<%= product._id %>" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>