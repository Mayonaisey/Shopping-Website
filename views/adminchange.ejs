<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add New Product</title>
    <link rel="stylesheet" href="./css/adminchanges.css">
    
</head>
<body>
    <header class="header">
        <h1>Add New Product</h1>
    </header>
    <div class="form-container">
        <form id="newProductForm" action="/adminchange" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="image1">Product Image 1:</label>
                <input type="file" id="image1" name="image1" accept="image/*">
            </div>

            <div class="form-group">
                <label for="image2">Product Image 2:</label>
                <input type="file" id="image2" name="image2" accept="image/*">
            </div>

            <div class="form-group">
                <label for="image3">Product Image 3:</label>
                <input type="file" id="image3" name="image3" accept="image/*">
            </div>

            <div class="form-group">
                <label for="name">Product Name:</label>
                <input type="text" id="name" name="name">
            </div>

            <div class="form-group">
                <label for="type">Product Type:</label>
                <input type="text" id="type" name="type">
            </div>

            <div class="form-group">
                <label for="price">Product Price:</label>
                <input type="text" id="price" name="price">
            </div>

            <div class="form-group">
                <label for="description">Product Description:</label>
                <textarea id="description" name="description" ></textarea>
            </div>

            <div class="form-group">
                <label for="size">Product Size:</label>
                <select id="size" name="size">
                    <option value="XS">XS</option>
                    <option value="S">S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                    <option value="XL">XL</option>
                    <option value="2XL">2XL</option>
                </select>
            </div>

            <div class="form-group">
                <label for="gender">Product Gender:</label>
                <select id="gender" name="gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>

            <div class="form-group">
                <label for="quantity">Product Quantity:</label>
                <input type="text" id="quantity" name="quantity">
            </div>

            <div class="form-group">
                <input type="submit" value="Add Product">
            </div>
        </form>
    </div>
    <header class="header">
        <h1>Products List</h1>
    </header>
    
        <table class="product-table">
            <thead>
                <tr>
                    <th>Image 1</th>
                    <th>Image 2</th>
                    <th>Image 3</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Size</th>
                    <th>Gender</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><img src="<%=product.image1 %>" alt="Product Image 1"></td>
                        <td><img src="<%= product.image2 %>" alt="Product Image 2"></td>
                        <td><img src="<%= product.image3 %>" alt="Product Image 3"></td>
                        <td><%= product.name %></td>
                        <td><%= product.type %></td>
                        <td><%= product.price.toFixed(2) %>L.E</td>
                        <td><%= product.description %></td>
                        <td><%= product.size %></td>
                        <td><%= product.gender %></td>
                        <td><%= product.quantity %></td>
                        <td>
                            <a href="/edit/<%= product._id %>" class="action-button"><i class="fas fa-edit"></i> Edit</a>
                            <a href="/delete/<%= product._id %>" onclick="return confirm('Are you sure you want to delete this product?')" class="action-button"><i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('newProductForm').addEventListener('submit', function (event) {
                
                event.preventDefault();
                let valid = true;

                const name = document.getElementById('name').value.trim();
                const type = document.getElementById('type').value.trim();
                const price = document.getElementById('price').value.trim();
                const description = document.getElementById('description').value.trim();
                const quantity = document.getElementById('quantity').value.trim();

                const lettersOnlyPattern = /^[A-Za-z]+$/;

                if (!name) {
                    alert('Product Name is required.');
                    valid = false;
                } else if (!lettersOnlyPattern.test(name)) {
                    alert('Product Name must contain letters only.');
                    valid = false;
                }

                if (!type) {
                    alert('Product Type is required.');
                    valid = false;
                } else if (!lettersOnlyPattern.test(type)) {
                    alert('Product Type must contain letters only.');
                    valid = false;
                }


                if (!price || isNaN(price) || parseFloat(price) <= 0) {
                    alert('Product Price must be a positive number.');
                    valid = false;
                }

                if (!description) {
                    alert('Product Description is required.');
                    valid = false;
                }

                if (!quantity || isNaN(quantity) || parseInt(quantity) <= 0) {
                    alert('Product Quantity must be a positive integer.');
                    valid = false;
                }
                if (valid) {
                alert("add done")
